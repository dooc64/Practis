@model IEnumerable<NoteBook.PL.Models.NoteVM>

@{
    ViewBag.Title = "Все заметки";
}

<h2>Все заметки</h2>

<p>
    @Html.ActionLink("Создать новую заметку", "Create")
</p>



<form>
    <div class="form-group">
        <input type="text" id="name" name="name" />
        <input type="submit" value="Найти" /> 

    </div>
</form>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Update", new { id=item.ID }) |
            @Html.ActionLink("Детали", "GetByID", new { id=item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
