<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Журнал</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top text-primary">
        <div class="container">
            <div>
                @Html.ActionLink("Журнал", "GetAll", "Note", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-header" style="margin-top: 15px;">
                @if (User.Identity.IsAuthenticated)
                {
                    <p>Здравствуйте, @User.Identity.Name</p>
                    @Html.ActionLink("Выйти", "LogOut", "Note")
                }
                else
                {
                    <p>Здравствуйте, гость @User.IsInRole("User")</p>
                }
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maksim Kulebyakin .NET Developer.</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>